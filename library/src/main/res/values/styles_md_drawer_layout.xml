<resources>

  <style name="MdDrawerLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="MdDrawerLayout.Content" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">?attr/mdDrawerLayout_translucentNavigationBackground</item>
    <item name="android:fitsSystemWindows">?attr/mdDrawerLayout_fitsSystemWindows</item>
  </style>

  <style name="MdDrawerLayout.Navigation" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">start</item>
    <item name="android:background">?attr/mdColor_backgroundPalette</item>
  </style>

</resources>