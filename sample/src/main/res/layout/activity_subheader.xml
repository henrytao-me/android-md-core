<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    style="@style/MdToolbar" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:text="MdSubHeader.List"
      style="@style/MdSubHeader.List" />

    <TextView
      android:text="MdSubHeader.List.Left"
      style="@style/MdSubHeader.List.Left" />

    <TextView
      android:text="MdSubHeader.List.Right"
      style="@style/MdSubHeader.List.Right" />

    <TextView
      android:text="MdSubHeader.List.RightLarge"
      style="@style/MdSubHeader.List.RightLarge" />

    <TextView
      android:text="MdSubHeader.List.LeftRight"
      style="@style/MdSubHeader.List.LeftRight" />

    <TextView
      android:text="MdSubHeader.List.LeftRightLarge"
      style="@style/MdSubHeader.List.LeftRightLarge" />

    <TextView
      android:text="MdSubHeader.Grid"
      style="@style/MdSubHeader.Grid" />

    <TextView
      android:text="MdSubHeader.Menu"
      style="@style/MdSubHeader.Menu" />
  </LinearLayout>
</LinearLayout>