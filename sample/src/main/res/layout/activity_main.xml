<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  tools:context=".activity.MainActivity"
  style="@style/MdDrawerLayout">

  <RelativeLayout
    android:id="@+id/content"
    style="@style/MdDrawerLayout.Content">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="?attr/mdColor_backgroundPalette">

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleMarginStart="?attr/mdLayout_spacing"
        style="@style/MdToolbar" />

      <fragment
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:name="me.henrytao.mddemo.fragment.MainFragment"
        tools:layout="@layout/fragment_main" />

    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/drawer"
    style="@style/MdDrawerLayout.Navigation">

    <fragment
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="me.henrytao.mddemo.fragment.NavigationDrawerFragment"
      tools:layout="@layout/view_navigation_drawer" />

  </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
